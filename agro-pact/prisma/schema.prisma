generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String
}

// schema.prisma
model Contract {
  id            Int      @id @default(autoincrement())
  walletAddress String
  cropType      String
  quantity      Int
  deadline      DateTime
  pricePerKg    Float
  userId        Int
  phoneNumber   String // This field is required
  createdAt     DateTime @default(now())
}
